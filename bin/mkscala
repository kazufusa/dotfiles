#!/bin/sh

set -Ceux

mkdir -p $1/project
mkdir -p $1/src/main/scala

cd $1
git init

cat <<EOF > .gitignore
*.class
*.jar
*.png.bak
*.asta.bak
*~
.DS_Store
*.log

### honkit ###
/honkit

### npm ###
node_modules
npm-debug.log

### sbt ###
target/
lib_managed/
src_managed/
project/boot/
.history
.cache
.bsp

### IntelliJ ###
*.iml
.idea/
EOF


cat <<EOF > build.sbt
ThisBuild / version := "0.1.0-SNAPSHOT"

ThisBuild / scalaVersion := "2.13.10"

lazy val root = (project in file("."))
  .settings(
    name := "$1"
  )
EOF

cat <<EOF > project/build.properties
sbt.version = 1.8.0
EOF

cat <<EOF > src/main/scala/Main.scala
object Main {
  def main(args: Array[String]): Unit = {
    println("Hello world!")
  }
}
EOF
